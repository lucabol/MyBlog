---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
layout: base.njk
eleventyComputed:
  title: “{{ tag | safe | lower }}”
permalink: /tags/{{ tag | safe | lower }}/
---
<h1>{{ title }}</h1>
{% set postslist = collections[ tag ] %}
{% include "z-postslist.njk" %}

<h3>See <a href="{{ '/tags/' | url }}">all tags.</a></h3>
