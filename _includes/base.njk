---
title: Luca Bolognese Blog
---
<!doctype html>
<html lang="en">

  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="webmention" href="https://webmention.io/www.lucabol.com/webmention" />
    <link rel="pingback" href="https://webmention.io/www.lucabol.com/xmlrpc" />

    {% set titl %}
        {%- if title -%}
            {{title}} - {{site.title}}
        {%- elseif renderData.title -%}
            {{renderData.title}} - {{site.title}}
        {%-else-%}
            {{site.title}} {{site.strapline}}
        {%- endif -%}
    {% endset %}

    {% include "z-seo.njk" %}

    <!-- favicon inline don't get picked up by browser, fluidicon is for mac -->
    <link href="/favicon.svg" rel="icon" type="image/svg+xml">
    <link href="/fluidicon.png" rel="fluid-icon" title="Lucabol">

    <link inline rel="stylesheet" href="{{ '/css/base.css' | url }}" text="text/css">
    <link inline media="only all" rel="stylesheet" href="{{ '/css/main.css' | url }}" text="text/css">

    <link inline rel="stylesheet" href="{{ '/css/themes/prism-twilight.css' | url }}" type="text/css" media="print" onload="this.media='only all'">

  </head>

  <body>
    <div class="center">
      <div class="stack">
        <h1 class="vh justenhance">{{ titl }}</h1>
        {% if not home %}
          {% include "z-navigation.html" %}
        {% endif %}

        <main id="main">
          {{ content | safe }}
        </main>

        {% if not home %}
          <footer id="footer" class="stack">

            {% include "z-menu-icons.html" %}
            {% include "z-search-base.njk" %}
            {% include "z-navigation.html" %}
            <div class="center-intrinsic">
                <a id="to-bottom" href="#top" class="to-home">Top</a>
            </div>
            </footer>
        {% endif %}
    </div>
  </div>

  </body>
</html>
